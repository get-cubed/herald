{
  "name": "herald",
  "version": "1.11.8",
  "description": "Configurable notifications when Claude finishes - TTS or alert sounds",
  "license": "MIT",
  "author": {
    "name": "Alex Johnson",
    "url": "https://github.com/al3xjohnson"
  },
  "repository": "https://github.com/al3xjohnson/herald",
  "homepage": "https://github.com/al3xjohnson/herald#readme",
  "keywords": [
    "notifications",
    "alerts",
    "tts",
    "text-to-speech",
    "sounds"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/dist/hooks/on-stop.js",
            "timeout": 60
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/dist/hooks/on-notification.js",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
